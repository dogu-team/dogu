{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "esnext",
    "moduleResolution": "node16",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules"],
  "include": ["global.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx", "i18n"],
  "references": [
    {
      "path": "../../packages/typescript-private/types"
    }
  ]
}
