{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "newLine": "lf",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2022",
    "outDir": "build",
    "rootDir": "."
  },
  "include": ["test"],
  "references": [
    {
      "path": "../../packages/typescript/dest"
    }
  ]
}
